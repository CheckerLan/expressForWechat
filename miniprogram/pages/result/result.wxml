<!--miniprogram/pages/result/result.wxml-->
<view wx:if="{{condition==1}}">
  <view class="infoHead">
    <view> 
      <text class="logCode">单号: {{LogisticCode}}</text>
      <mp-icon icon="copy" color="black" size="20" bindtap="copyCode"></mp-icon>
    </view>
    
   
    <text>快递公司: {{ShipperCode}}</text>
    
  </view>
  <view>
    <view class="tip">
      <text wx:if="{{State==0}}">
        暂无轨迹信息
      </text> 
      <text wx:elif="{{State==1}}">
        目前状态: 已揽收
      </text>
      <text wx:elif="{{State==2}}">
        目前状态: 在途中
      </text>
      <text wx:elif="{{State==3}}">
        目前状态: 已签收
      </text>
      <text wx:elif="{{State==4}}">
        此快递为问题件
      </text>
      <text wx:else>
        未知问题
      </text>
    </view>
    

    <view class="tracesList" wx:for="{{Traces}}">
      <text class="tracesInfo">{{item.AcceptStation}}
      </text>
      
      <text class="tracesTime">{{item.AcceptTime}}</text>
      
    </view>
  </view>

</view>
<view wx:elif="{{condition==-1}}">
  查询失败
  <button type="primary" bindtap="toIndex">
    返回主页
  </button>
</view>
<view wx:else>
  <mp-loading type="circle"></mp-loading>
</view>